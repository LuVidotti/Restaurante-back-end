{{/each}}

<h2>Editar sobremesa</h2>

<div class="card">
    <div class="card-body">
        <form action="/admin/sobremesas/edit" method="post">
            <input type="hidden" name="id" value="{{sobremesa._id}}">

            <label for="nome">Nome da sobremesa:</label>
            <input type="text" id="nome" name="nome" class="form-control" required value="{{sobremesa.nome}}">

            <label for="descricao">Descrição:</label>
            <textarea name="descricao" id="descricao" cols="30" rows="10" class="form-control" required>{{sobremesa.descricao}}</textarea>

            <button type="submit" class="btn btn-success btn-block mt-2">Editar sobremesa</button>
        </form>
    </div>
</div>