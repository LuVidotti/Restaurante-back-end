<h2>Pratos principais:</h2>
<hr>

<a href="/admin/pratos-principais/cad"><button class="btn btn-success mb-4">Cadastrar prato</button></a>

{{#each pratosPrincipais}}
    <div class="card mb-4">
        <div class="card-body">
            <h3>Nome: {{nome}}</h3>
            <p>Descrição: {{descricao}}</p>
            <a href="/admin/pratos-principais/edit/{{_id}}"><button class="btn btn-dark btn-sm">Editar</button></a>
            <form action="/admin/pratos-principais/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger btn-sm mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4>Nenhum prato principal cadastrado</h4>
{{/each}}