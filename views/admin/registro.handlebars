<h2>Criar administrador</h2>

<div class="card">
    <div class="card-body">
        <form action="/admin/registro" method="post">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" id="nome" class="form-control" required>

            <label for="email">E-mail:</label>
            <input type="email" name="email" id="email" class="form-control" required>

            <label for="senha">Senha:</label>
            <input type="password" name="senha" id="senha" class="form-control" required>

            <label for="senha2">Repita sua senha:</label>
            <input type="password" name="senha2" id="senha2" class="form-control" required>

            <button type="submit" class="btn btn-success btn-block mt-2">Criar administrador</button>
        </form>
    </div>
</div>